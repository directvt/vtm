        <!-- Scripting context:
                - gear: ...
                - vtm: ...
                    - gate: ...
                        - window: ...
                            - tile: ...
                                - grip: ...
                            - terminal: ...  -->
        <Noop                  ="vtm.Noop()"/>                <!-- No op action. -->
        <Disconnect            ="gate.Disconnect()"/>         <!-- Disconnect from the desktop. -->
        <TryToQuit             ="vtm.Shutdown('try')"/>       <!-- Shut down the desktop server if no applications are running. -->
        <RunApplication        ="vtm.Run()"/>                 <!-- Run default application. -->
        <RunInfoPage           ="vtm.Run({ title='Info-page', hidden=true, label='Info', type='info' })"/>  <!-- Run Info-page. -->
        <FocusPrevWindow       ="vtm.FocusNextWindow(-1)"/>   <!-- Switch focus to the prev desktop window. -->
        <FocusNextWindow       ="vtm.FocusNextWindow( 1)"/>   <!-- Switch focus to the next desktop window. -->

        <AlwaysOnTop           ="window.AlwaysOnTop()"/>      <!-- Toggle AlwaysOnTop window flag. -->
        <CloseWindow           ="window.Close()"/>            <!-- Close window. -->
        <WindowClosePreview    ="window.ShowClosePreview()"/> <!-- Pred window close action. -->
        <CancelWindowClose     ="window.HideClosePreview()"/> <!-- Clear pred-close window state. -->
        <MinimizeWindow        ="window.MinimizeWindow()"/>   <!-- Minimize window. -->
        <MaximizeWindow        ="window.MaximizeWindow()"/>   <!-- Maximize window. -->
        <FullscreenWindow      ="window.Fullscreen()"/>       <!-- Maximize window to full screen. -->
        <MoveWindowLeft        ="window.WarpWindow( 1,-1, 0, 0)"/>  <!-- Move window to the left. WarpWindow(l, r, t, b): The parameters specify four deltas for the left, right, top and bottom sides of the window. -->
        <MoveWindowRight       ="window.WarpWindow(-1, 1, 0, 0)"/>  <!-- Move window to the right. -->
        <MoveWindowUp          ="window.WarpWindow( 0, 0, 1,-1)"/>  <!-- Move window up. -->
        <MoveWindowDown        ="window.WarpWindow( 0, 0,-1, 1)"/>  <!-- Move window down. -->
        <MoveWindowTopLeft     ="window.WarpWindow( 2,-2, 1,-1)"/>  <!-- Move window to the top-left. -->
        <MoveWindowBottomLeft  ="window.WarpWindow( 2,-2,-1, 1)"/>  <!-- Move window to the bottom-left. -->
        <MoveWindowTopRight    ="window.WarpWindow(-2, 2, 1,-1)"/>  <!-- Move window to the top-right. -->
        <MoveWindowBottomRight ="window.WarpWindow(-2, 2,-1, 1)"/>  <!-- Move window to the bottom-right. -->
        <IncreaseWindowWidth   ="window.WarpWindow( 0, 1, 0, 0)"/>  <!-- Increase window width. -->
        <DecreaseWindowWidth   ="window.WarpWindow( 0,-1, 0, 0)"/>  <!-- Decrease window width. -->
        <IncreaseWindowHeight  ="window.WarpWindow( 0, 0, 0, 1)"/>  <!-- Increase window height. -->
        <DecreaseWindowHeight  ="window.WarpWindow( 0, 0, 0,-1)"/>  <!-- Decrease window height. -->

        <TileFocusPrev         ="tile.FocusNextPaneOrGrip(-1)"/>  <!-- Focus the previous pane or the split grip. -->
        <TileFocusNext         ="tile.FocusNextPaneOrGrip( 1)"/>  <!-- Focus the next pane or the split grip. -->
        <TileFocusPrevPane     ="tile.FocusNextPane(-1)"/>        <!-- Focus the previous pane. -->
        <TileFocusNextPane     ="tile.FocusNextPane( 1)"/>        <!-- Focus the next pane. -->
        <TileRunApplication    ="tile.RunApplication()"/>         <!-- Launch application instances in active empty slots. The app to run can be set by RightClick on the taskbar. -->
        <TileSelectAllPanes    ="tile.SelectAllPanes()"/>         <!-- Select all panes. -->
        <TileSplitHorizontally ="tile.SplitPane(0)"/>             <!-- Split active panes horizontally. -->
        <TileSplitVertically   ="tile.SplitPane(1)"/>             <!-- Split active panes vertically. -->
        <TileSplitOrientation  ="tile.RotateSplit()"/>            <!-- Change split orientation. -->
        <TileSwapPanes         ="tile.SwapPanes()"/>              <!-- Swap two or more panes. -->
        <TileEqualizeSplitRatio="tile.EqualizeSplitRatio()"/>     <!-- Equalize split ratio. -->
        <TileSetManagerTitle   ="tile.SetTitle()"/>               <!-- Set tiling window manager title using clipboard data. -->
        <TileClosePane         ="tile.ClosePane()"/>              <!-- Close active application. -->
        <TileMoveGripLeft      ="grip.MoveGrip(-1, 0)"/>          <!-- Move the split grip to the left. -->
        <TileMoveGripRight     ="grip.MoveGrip( 1, 0)"/>          <!-- Move the split grip to the right. -->
        <TileMoveGripUp        ="grip.MoveGrip( 0,-1)"/>          <!-- Move the split grip up. -->
        <TileMoveGripDown      ="grip.MoveGrip( 0, 1)"/>          <!-- Move the split grip down. -->
        <TileDecreaseGripWidth ="grip.ResizeGrip(-1)"/>           <!-- Decrease the split grip width. -->
        <TileIncreaseGripWidth ="grip.ResizeGrip( 1)"/>           <!-- Increase the split grip width. -->
        <TileFocusPrevGrip     ="grip.FocusNextGrip(-1)"/>        <!-- Focus the prev split grip. -->
        <TileFocusNextGrip     ="grip.FocusNextGrip( 1)"/>        <!-- Focus the next split grip. -->

        <IncreaseCellHeight    ="vtm.gui_IncreasecCellHeight( 1)"/>                  <!-- Increase the text cell height by one pixel. -->
        <DecreaseCellHeight    ="vtm.gui_IncreasecCellHeight(-1)"/>                  <!-- Decrease the text cell height by one pixel. -->
        <ResetWheelAccumulator ="vtm.gui_WheelAccumReset()"/>                        <!-- Reset wheel accumulator. -->
        <ResetCellHeight       ="if (not gear.IsKeyRepeated()) then vtm.gui_CellHeightReset() end"/>   <!-- Reset text cell height. -->
        <ToggleFullscreenMode  ="if (not gear.IsKeyRepeated()) then vtm.gui_Fullscreen() end"/>        <!-- Toggle fullscreen mode. -->
        <ToggleAntialiasingMode="if (not gear.IsKeyRepeated()) then vtm.gui_AntialiasingMode() end"/>  <!-- Toggle text antialiasing mode. -->
        <RollFontsBackward     ="if (not gear.IsKeyRepeated()) then vtm.gui_RollFonts(-1) end"/>       <!-- Roll font list backward. -->
        <RollFontsForward      ="if (not gear.IsKeyRepeated()) then vtm.gui_RollFonts( 1) end"/>       <!-- Roll font list forward. -->

        <ToggleDebugOverlay    ="vtm.tui_DebugOverlay()"/>  <!-- Toggle debug overlay. -->

        <ExclusiveKeyboardMode             ="terminal.SetExclusiveKeyboardMode()"/>   <!-- Toggle exclusive keyboard mode by pressing and releasing Ctrl-Alt or Alt-Ctrl (reversed release order). -->
        <TerminalFindPrev                  ="terminal.FindNextMatch(-1)"/>            <!-- Highlight prev match of selected text fragment. Clipboard content is used if no active selection. -->
        <TerminalFindNext                  ="terminal.FindNextMatch( 1)"/>            <!-- Highlight next match of selected text fragment. Clipboard content is used if no active selection. -->
        <TerminalScrollViewportOnePageUp   ="terminal.ScrollViewportByPage( 0, 1)"/>  <!-- Scroll viewport one page up. -->
        <TerminalScrollViewportOnePageDown ="terminal.ScrollViewportByPage( 0,-1)"/>  <!-- Scroll viewport one page down. -->
        <TerminalScrollViewportOnePageLeft ="terminal.ScrollViewportByPage( 1, 0)"/>  <!-- Scroll viewport one page to the left. -->
        <TerminalScrollViewportOnePageRight="terminal.ScrollViewportByPage(-1, 0)"/>  <!-- Scroll viewport one page to the right. -->
        <TerminalScrollViewportOneLineUp   ="terminal.ScrollViewportByCell( 0, 1)"/>  <!-- Scroll viewport one line up. -->
        <TerminalScrollViewportOneLineDown ="terminal.ScrollViewportByCell( 0,-1)"/>  <!-- Scroll viewport one line down. -->
        <TerminalScrollViewportOneCellLeft ="terminal.ScrollViewportByCell( 1, 0)"/>  <!-- Scroll viewport one cell to the left. -->
        <TerminalScrollViewportOneCellRight="terminal.ScrollViewportByCell(-1, 0)"/>  <!-- Scroll viewport one cell to the right. -->
        <TerminalScrollViewportToTop       ="if (not gear.IsKeyRepeated()) then terminal.ScrollViewportToTop() end"/>  <!-- Scroll viewport to the scrollback top. -->
        <TerminalScrollViewportToEnd       ="if (not gear.IsKeyRepeated()) then terminal.ScrollViewportToEnd() end"/>  <!-- Scroll viewport to the scrollback top. -->
        <TerminalSendKey                   ="terminal.SendKey('test\r')"/>            <!-- Simulating keypresses using the specified string. -->
        <TerminalOutput                    ="terminal.Print('Hello!')"/>              <!-- Direct output the string to the terminal scrollback. -->
        <TerminalCopyViewport              ="terminal.CopyViewport()"/>               <!-- Сopy viewport to clipboard. -->
        <TerminalCopySelection             ="terminal.CopySelection()"/>              <!-- Сopy selection to clipboard. -->
        <TerminalClipboardPaste            ="terminal.PasteClipboard()"/>             <!-- Paste from clipboard. -->
        <TerminalClipboardWipe             ="terminal.ClearClipboard()"/>             <!-- Reset clipboard. -->
        <TerminalClipboardFormat           ="terminal.SetClipboardFormat()"/>         <!-- Toggle terminal text selection copy format. -->
        <TerminalSelectionForm             ="terminal.SetSelectionForm()"/>           <!-- Toggle between linear and rectangular selection form. -->
        <TerminalSelectionCancel           ="terminal.ClearSelection()"/>             <!-- Deselect a selection. -->
        <TerminalSelectionOneShot          ="terminal.OneShotSelection()"/>           <!-- One-shot toggle to copy text while mouse tracking is active. Keep selection if 'Ctrl' key is pressed. -->
        <TerminalUndo                      ="terminal.UndoReadline()"/>               <!-- (Win32 Cooked/ENABLE_LINE_INPUT mode only) Discard the last input. -->
        <TerminalRedo                      ="terminal.RedoReadline()"/>               <!-- (Win32 Cooked/ENABLE_LINE_INPUT mode only) Discard the last Undo command. -->
        <TerminalCwdSync                   ="terminal.SetCwdSync()"/>                 <!-- Toggle the current working directory sync mode. -->
        <TerminalWrapMode                  ="terminal.SetWrappingMode()"/>            <!-- Toggle terminal scrollback lines wrapping mode. Applied to the active selection if it is. -->
        <TerminalAlignMode                 ="terminal.SetAligningMode()"/>            <!-- Toggle terminal scrollback lines aligning mode. Applied to the active selection if it is. -->
        <TerminalFullscreen                ="window.SetFullscreenMode()"/>            <!-- Toggle fullscreen mode. -->
        <TerminalMaximize                  ="window.MaximizeWindow()"/>               <!-- Toggle between maximized and normal window size. -->
        <TerminalMinimize                  ="window.MinimizeWindow()"/>               <!-- Minimize window. -->
        <TerminalStdioLog                  ="terminal.SetLogging()"/>                 <!-- Toggle stdin/stdout logging. -->
        <TerminalRestart                   ="terminal.Restart()"/>                    <!-- Terminate runnning console apps and restart current session. -->
        <TerminalQuit                      ="terminal.Quit()"/>                       <!-- Terminate runnning console apps and close terminal. -->

        <ScrollPageUp      ="defapp.ScrollViewportByPage( 0, 1)"/>  <!--  -->
        <ScrollPageDown    ="defapp.ScrollViewportByPage( 0,-1)"/>  <!--  -->
        <ScrollLineUp      ="defapp.ScrollViewportByStep( 0, 3)"/>  <!--  -->
        <ScrollLineDown    ="defapp.ScrollViewportByStep( 0,-3)"/>  <!--  -->
        <ScrollCharLeft    ="defapp.ScrollViewportByStep( 3, 0)"/>  <!--  -->
        <ScrollCharRight   ="defapp.ScrollViewportByStep(-3, 0)"/>  <!--  -->
        <ScrollTop         ="defapp.ScrollViewportToTop()"/>        <!--  -->
        <ScrollEnd         ="defapp.ScrollViewportToEnd()"/>        <!--  -->
